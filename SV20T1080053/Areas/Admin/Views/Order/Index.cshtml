@using SV20T1080053.DomainModels;
@model List<SV20T1080053.DomainModels.Order>

@{
    ViewBag.Title = "Quản lý đơn thuê";
}

<div style="background-color: white; border-radius: 10px; padding: 20px;">
    <div class="container-fluid">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a style="padding:10px; font-size: 14px; font-weight: 200;" href="~/Admin/Order/Create" class="btn btn-primary btn-sm  navbar-btn">
                    <i class="fa fa-plus"></i> Tạo đơn thuê
                </a>
            </li>
        </ul>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-center bg-primary">
                    <th class="text-center">STT</th>
                    <th class="text-center">Khách hàng</th>
                    <th class="text-center">Ngày thuê</th>
                    <th class="text-center">Nhân viên phụ trách</th>
                    <th class="text-center">Ngày trả xe</th>
                    <th class="text-center">Trạng Thái</th>
                    <th class="text-center">Chức Năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="text-center" id="order-@order.OrderId">
                        <td>@(Model.IndexOf(order) + 1)</td>
                        <td>@order.User?.FullName</td>
                        <td>@order.StartDate</td>
                        <td>@order.User?.GetRoleName()</td>
                        <td>@order.EndDate</td>
                        <td>@order.Status</td>
                        <td>
                            <a href="~/Admin/Order/Detail/" class="glyphicon glyphicon-th-list" title="Thông tin">
                                <i class="fa fa-plus-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>