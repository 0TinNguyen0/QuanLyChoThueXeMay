@{
    ViewBag.Title = "Sửa nhân viên";
}

<form action="#" method="post">
    <div class="form-group">
        <label for="fullname">Họ và Tên:</label><br>
        <input type="text" class="form-control" id="fullname" name="fullname"><br><br>
    </div>
    <div class="form-group">
        <label for="dob">Ngày Sinh:</label><br>
        <input type="date" class="form-control" id="dob" name="dob"><br><br>
    </div>
    <div class="form-group">
        <label for="address">Địa chỉ:</label><br>
        <input type="text" class="form-control" id="address" name="address"><br><br>
    </div>
    <div class="form-group">
        <label for="phone">Số điện thoại:</label><br>
        <input type="tel" class="form-control" id="phone" name="phone"><br><br>
    </div>
    <div class="form-group">
        <label for="email">Email:</label><br>
        <input type="email" class="form-control" id="email" name="email"><br><br>
    </div>
    <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>