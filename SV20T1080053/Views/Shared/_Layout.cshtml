<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SV20T1080053.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/layout_home.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/scripts.js">
    <style>
 
    </style>
</head>
<body>

    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="position: sticky; top: 0; z-index: 1000;">
        <div class="container px-5">
            <a class="navbar-brand" href="~/Home" style="font-size: 30px; font-weight: bold; letter-spacing: 2px; font-family: 'Arial', sans-serif;">
                MOTORCYCLE RENTAL
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div style="font-size:20px" class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="~/Home">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">Loại xe</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">Hãng xe</a></li>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Customer"))
                            {
                                var customerData = User.GetUserData(); // Assuming this method fetches user data for customers
                                if (customerData != null)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                          
                                            @customerData.FullName
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="customerDropdown">
                                            <li class="dropdown-item"><img src="~/Images/Customers/@customerData.Photo" class="img-circle" alt="User Image" style="width: 50px; height: 50px;"></li>
                                            <li><a class="dropdown-item" href="~/Account/ChangePassword?id=@customerData.UserId">Đổi mật khẩu</a></li>
                                            <li><a class="dropdown-item" href="~/Account/Logout">Đăng xuất</a></li>
                                           
                                        </ul>
                                    </li>
                                }
                            }
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="~/Account/Login">Đăng nhập</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/Account/Register">Đăng ký</a></li>
                        }
                </ul>
                    <form class="d-flex">
                        <button href="~/Home/Cart" style="color:#fff" class="btn btn-outline-dark" type="submit">
                            <i style="color:#fff" class="bi-cart-fill me-1"></i>
                            Giỏ hàng
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                    </form>
            </div>
        </div>
    </nav>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        <footer class="bg-dark text-white py-5">
        <div class="app-footer p-4">
            <div class="row d-flex justify-content-around">
                <div class="footer-box col-3">
                    <h3 class="information-name">
                        Motocycle Rentalt  
                        <br />
                        <span>Luôn đem lại cảm giác tuyệt vời nhất cho bạn.</span>
                    </h3>
                    <br/>
                    <p class="information-text"><i class="fa fa-phone"></i> Hotline: 0375.551.042</p>
                    <p class="information-text"><i class="fa fa-envelope"></i> Gmail: Trunga92loctri@gmail.com</p>
                    <p class="information-text"><i class="fa fa-map-marker-alt"></i><b> Địa chỉ:</b> 165 An Dương Vương, thành phố Huế</p>
                    <p class="information-text"><i class="fa fa-clock"></i> Thứ hai - Chủ nhật: 8:00 - 21:00</p>
                    
                </div>
                <div class="footer-box col-3">
                    <h3>Giới thiệu về Motocycle Rentalt</h3>
                    <ul class="list-group">
                        <div class="item">
                            <p><i class="fa fa-check"></i> Chất lượng làm nên thương hiệu Motocycle Rentalt.</p>
                        </div>
                        <div class="item">
                            <p><i class="fa fa-check"></i> Nhiều mẫu xe đẹp cho khách hàng thả ga lựa chọn.</p>
                        </div>
                        <div class="item">
                            <p><i class="fa fa-check"></i> Đội ngũ chăm sóc khách hàng thân thiện.</p>
                        </div>
                        <div class="item">
                            <p>
                                <i class="fa fa-check"></i> Liên hệ ngay với chúng tôi để được tư vấn và đặt xe một cách dễ dàng, tiện lợi.
                                Chúng tôi rất hân hạnh được phục vụ bạn!
                            </p>
                        </div>
                    </ul>
                </div>
                <div class="footer-box col-3">
                    <h3>Các trang xã hội hiện có</h3>
                    <div class="information-icons d-flex ">
                        <a href="#"><span class="" style="font-size: 36px; color: #0051ff; margin-left: 33px"><i class="fab fa-facebook"></i></span></a>
                        <a href="#"><span class="" style="font-size: 36px; color: #dfb3f2; margin-left: 33px"><i class="fab fa-instagram"></i></span></a>
                        <a href="#"><span class="" style="font-size: 36px; color: #ff0808; margin-left: 33px"><i class="fab fa-youtube"></i></span></a>
                        <a href="#"><span class="" style="font-size: 36px; color: #4285f4; margin-left: 33px"><i class="fab fa-twitter"></i></span></a>
                    </div>
                </div>
            </div>
        </div>
        </footer>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Nguyễn Quốc Trung - <a asp-area="" asp-controller="Home" asp-action="Privacy">Bản quyền</a>
        </div>
    </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>
</html>
